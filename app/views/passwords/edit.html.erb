<div id="page-content">
  <div class="container">
    <div class="card text-center mt-4 mb-4" , id='signup' %>>
      <div class="card-header">
        <h1 class="text-center mt-4 font-weight-bold" , id="form-title"><%= t("edit.title_passwords") %></h1>
      </div>
      <div class="card-body">
        <%= render "/shared/errors", error_target: @user %>
        <%= form_with(model: @user, url: password_path(params[:id]), local: true) do |f|%>
        <div class="form-group row">
          <%= f.label t('password_label'), class: "col-12 col-form-label signup-label" %>
        </div>
        <div class="form-group row">
            <%= f.password_field :password, class: "form-control signup-field", placeholder: t('password_placeholder') %>
        </div>

        <div class="form-group row">
          <%= f.label t('confirmation_label'), class: "col-12 col-form-label signup-label" %>
        </div>
        <div class="form-group row">
            <%= f.password_field :password_confirmation, class: "form-control signup-field",
             placeholder: t('confirmation_placeholder') %>
        </div>
        <p class="text-center">
          <%= f.submit t('submit_button'), class: "btn btn-secondary font-weight-bold" %>
        </p>
        <% end %>
      </div>
    </div>
  </div>
</div>