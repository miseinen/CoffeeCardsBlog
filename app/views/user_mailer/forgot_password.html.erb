<div class="card-body">
  <div class="card-header">
    <p class="card-title"><%= t('forgot_password.greeting') %>, <%= @user.username %></p>
  </div>
  <div class="card-text">
    <p><%= t('forgot_password.text_click_url') %>:</p>

    <p><a href=<%= edit_password_url(I18n.locale, @user.reset_password_token) %> class="button">
        <%= t('forgot_password.reset_password_button') %></a></p>
  </div>
  <div class="card-footer">
    <p><%= t('forgot_password.if_mistake') %></p>
  </div>
</div>