<nav class="navbar navbar-expand-lg navbar-light bg-light">

  <div class="container">
    <%= link_to "CoffeeCards Blog", root_path , class: "navbar-brand", id: "logo" %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= I18n.locale %>
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <%= link_to "English", locale_root_path(:locale => :en), class: "dropdown-item" %>
            <%= link_to "Русский", locale_root_path(:locale => :ru), class: "dropdown-item" %>
          </div>
        </li>
        <li class="nav-item active">
          <%= link_to "#{t 'navbar.all_coffeecards'}", coffeecards_path(:locale), class: "nav-link" %>
        </li>
        <li class="nav-item active">
          <%= link_to "#{t 'navbar.all_users'}", users_path(:locale), class: "nav-link" %>
        </li>

        <% if logged_in? %>
        <li class="nav-item active">
          <%= link_to "#{t 'navbar.new_coffeecard'}", new_coffeecard_path(:locale), class: "nav-link" %>
        </li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li class="nav-item active">
          <%= link_to "#{t 'navbar.my_profile'} #{(t 'navbar.admin_role') if current_user.admin?}#{current_user.username})", user_path(current_user), class: "nav-link" %>
        </li>
        <li class="nav-item active">
          <%= link_to "#{t 'navbar.logout'}", logout_path(:locale), class: "nav-link", method: :delete %>
        </li>
      </ul>
      <% else %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li class="nav-item active">
          <%= link_to "#{t 'navbar.login'}", login_path(:locale), class: "nav-link" %>
        </li>
        <li class="nav-item active">
          <%= link_to "#{t 'navbar.signup'}", signup_path(:locale), class: "nav-link" %>
        </li>
      </ul>
      <% end %>
    </div>
  </div>
</nav>