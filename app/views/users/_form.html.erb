<div id="page-content">
  <div class="container">
    <div class="card text-center mt-4 mb-4" , id=<%= image_id %>>
      <div class="card-header">
        <h1 class="text-center mt-4 font-weight-bold" , id="form-title"><%= title %></h1>
      </div>
      <div class="card-body">
        <%= render "/shared/errors", error_target: @user %>

        <%= form_with(model: @user, local: true) do |f| %>

        <div class="form-group row">
          <%= f.label t('user.username'), class: "col-2 col-form-label signup-label" %>
          <div class="col-10">
            <%= f.text_field :username, class: "form-control signup-field",
             placeholder: t('user.enter_username'), maxlength: get_maxlength(User, :username) %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label t('user.about'), class: "col-2 col-form-label signup-label" %>
          <div class="col-10">
            <%= f.text_area :about, class: "form-control signup-field", rows: "3",
             placeholder: t('user.enter_about'), maxlength: get_maxlength(User, :about) %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label t('general.email'), class: "col-2 col-form-label signup-label" %>
          <div class="col-10">
            <%= f.email_field :email, class: "form-control signup-field",
             placeholder: t('general.enter_email'), maxlength: get_maxlength(User, :email) %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label t('general.password'), class: "col-2 col-form-label signup-label" %>
          <div class="col-10">
            <%= f.password_field :password, class: "form-control signup-field", placeholder: t('general.enter_password') %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label t('user.password_confirmation'), class: "col-2 col-form-label signup-label" %>
          <div class="col-10">
            <%= f.password_field :password_confirmation, class: "form-control signup-field",
             placeholder: t('user.enter_password_confirmation') %>
          </div>
        </div>

        <p class="text-center">
          <%= f.submit t('general.button.submit'), class: "btn btn-secondary font-weight-bold" %>
          <% if edit %>
          <%= link_to t('user.delete_account'), user_path(@user), method: :delete, data: { confirm: t('general.you_sure?') },
          class: "btn btn-outline-danger" %>
          <% end %>
        </p>
        <% end %>
      </div>
    </div>
  </div>
</div>