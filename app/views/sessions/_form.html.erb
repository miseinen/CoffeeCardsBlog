<div id="page-content">
  <div class="container">
    <div class="card text-center mt-4 mb-4" , id=<%= image_id %>>
      <div class="card-header">
        <h1 class="text-center mt-4 font-weight-bold" , id="form-title"><%= title %></h1>
      </div>
      <div class="card-body">

        <%= form_with(scope: :session, url: login_path, local: true) do |f| %>

          <div class="form-group row">
            <%= f.label t('email_label'), class: "col-12 col-form-label signup-label" %>
          </div>
          <div class="form-group row">
              <%= f.email_field :email, class: "form-control signup-field", placeholder: t('email_placeholder') %>
          </div>

        <div class="form-group row">
          <%= f.label t('password_label'), class: "col-12 col-form-label signup-label" %>
        </div>
        <div class="form-group row">
            <%= f.password_field :password, class: "form-control signup-field", placeholder: t('password_placeholder') %>
          <div class="col text-center">
            <%= link_to t('form.reset_password_button'), new_password_path, class: "forgot_password_link" %>
          </div>
        </div>

        <p class="text-center">
          <%= f.submit t('submit_button'), class: "btn btn-secondary font-weight-bold" %>
        </p>
        <% end %>
      </div>
    </div>
  </div>
</div>