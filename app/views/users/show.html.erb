<div id="page-content">
  <h1><% @user.username %></h1>
  <div class="container">
    <%= render "user_card", user: @user, list: false %>
  </div>
  <% if @coffeecards.count > 0 %>
  <h1 class="text-center", id="users-coffeecards"><%= @user.username %>'s CoffeeCards</h1>
  <div class="container">
    <%= render "shared/pagination", model: @coffeecards, anchor: "users-coffeecards" %>
    <% @coffeecards.each do |a| %>
    <%= render "shared/coffee_card", coffeecard: a, show: false %>
    <% end %>
    <%= render "shared/pagination", model: @coffeecards, anchor: "users-coffeecards" %>
  </div>
  <% end %>
</div>