<div id="page-content">
  <div class="container">
    <div class="card text-center mt-4 mb-4" , id=<%= image_id %>>
      <div class="card-header">
        <h1 class="text-center mt-4 font-weight-bold" , id="form-title"><%= title %></h1>
      </div>
      <div class="card-body">

        <%= form_with(scope: :session, url: login_path, local: true) do |f| %>

        <div class="form-group row">
          <%= f.label :email, class: "col-2 col-form-label signup-label" %>
          <div class="col-10">
            <%= f.email_field :email, class: "form-control signup-field", placeholder: "Enter your email address" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :password, class: "col-2 col-form-label signup-label" %>
          <div class="col-10">
            <%= f.password_field :password, class: "form-control signup-field", placeholder: "Enter your password" %>
          </div>
        </div>

        <p class="text-center"><%= f.submit :Submit, class: "btn btn-secondary font-weight-bold" %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>